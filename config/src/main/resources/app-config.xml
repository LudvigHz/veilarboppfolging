<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://appconfig.aura.nav.no"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://appconfig.aura.nav.no
             http://maven.adeo.no/xsd/appconfig.xsd ">

    <name>veilarboppfolging</name>

    <selftest>
        <path>veilarboppfolging/internal/selftest</path>
    </selftest>

    <artifacts>
        <ear groupId="no.nav.fo" artifactId="veilarboppfolging-ear"/>
    </artifacts>

    <loadBalancer isAlive="veilarboppfolging/internal/isAlive"/>

    <security serviceUserResourceAlias="srvveilarboppfolging">
        <logins>
            <saml/>
        </logins>
    </security>

    <abacSecurity serviceUserResourceAlias="srvveilarboppfolging"/>

    <logging serviceCalls="true"/>

    <resources>
        <applicationProperties alias="veilarboppfolging.properties"/>
        <applicationProperties alias="feed.brukertilgang"/>
        <webservice alias="virksomhet:DigitalKontakinformasjon_v1" mapToProperty="dkif.endpoint"/>
        <webservice alias="virksomhet:Ytelseskontrakt_v3" mapToProperty="ytelseskontrakt.endpoint"/>
        <webservice alias="virksomhet:Oppfolging_v1" mapToProperty="oppfoelging.endpoint"/>
        <webservice alias="virksomhet:Oppfoelgingsstatus_v2" mapToProperty="oppfoelgingsstatus.v2.endpoint"/>
        <webservice alias="virksomhet:OrganisasjonEnhet_v1" mapToProperty="organisasjonenhet.endpoint"/>
        <webservice alias="Aktoer_v2" mapToProperty="aktoer.endpoint"/>
        <webservice alias="Varseloppgave_v1" mapToProperty="varseloppgave.endpoint"/>
        <webservice mapToProperty="behandlearbeidssoker.endpoint" alias="virksomhet:BehandleArbeidssoeker_v1"/>
        <applicationCertificate alias="srvveilarboppfolging"/>
        <rest alias="abac.pdp.endpoint" mapToProperty="abac.endpoint" />
        <rest alias="veilArbAktivitetAPI" mapToProperty="veilarbaktivitet" />
        <rest alias="veilarblogin.redirect-url" mapToProperty="oidc-redirect" />
        <rest alias="unleash-api" mapToProperty="unleash" />

        <rest alias="veilarbazureadproxy_discovery" mapToProperty="aad_b2c_discovery" />
        <credential alias="aad_b2c_clientid"/>

        <baseUrl alias="aktivitetsplan"/>
        <baseUrl alias="isso-host"/>
        <baseUrl alias="isso-jwks"/>
        <baseUrl alias="isso-issuer"/>
        <baseUrl alias="isso.isalive"/>
        <credential alias="isso-rp-user"/>

        <baseUrl alias="kafka-brokers" />

        <fileLibrary mapToProperty="vilkar" alias="veilarboppfolging.vilkar.v1"/>

        <datasource alias="veilarboppfolgingDB" xaEnabled="true" jndi="java:jboss/jdbc/veilarboppfolgingDB">
            <pool maxPoolSize="300" minPoolSize="0"/>
        </datasource>

        <ldap alias="ldap" mapToProperty="ldap"/>
    </resources>

    <exposed-services>
        <exposedRest path="/veilarboppfolging/api" name="veilArbOppfolgingAPI"/>
        <exposedSoap name="BehandleOppfolgingV1"
                     path="/veilarboppfolging-ws/ws/Oppfolging"
                     securityToken="SAML"
                     wsdlGroupId="no.nav.tjenester"
                     wsdlArtifactId="brukerdialog-behandleOppfolging-v1-tjenestespesifikasjon"
                     wsdlVersion="${brukerdialog-behandleOppfolging-v1-tjenestespesifikasjon.version}">
            <exportToZone>SBS</exportToZone>
        </exposedSoap>
        <exposedSoap name="OppfolgingsinfoV2"
                     path="/veilarboppfolging-ws/ws/oppfolgingsinfo"
                     securityToken="SAML"
                     wsdlGroupId="no.nav.sbl.dialogarena"
                     wsdlArtifactId="oppfolgingsinfo-v1-tjenestespesifikasjon"
                     wsdlVersion="${oppfolgingsinfo-v1-tjenestespesifikasjon.version}">
        </exposedSoap>
    </exposed-services>

    <serverOptions>
        <memoryParameters resourceAlias="veilarb-memparams"/>
    </serverOptions>

</application>
