<?xml version="1.0" encoding="UTF-8"?>
<application xmlns="http://appconfig.aura.nav.no"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://appconfig.aura.nav.no
             http://maven.adeo.no/xsd/appconfig.xsd ">

    <name>veilarbsituasjon</name>

    <selftest>
        <path>veilarbsituasjon/internal/selftest</path>
        <humanReadablePath>veilarbsituasjon/internal/selftest</humanReadablePath>
    </selftest>

    <artifacts>
        <ear groupId="no.nav.fo" artifactId="veilarbsituasjon-ear"/>
    </artifacts>

    <loadBalancer isAlive="veilarbsituasjon/internal/isAlive" />

    <security serviceUserResourceAlias="srvveilarbsituasjon">
        <logins>
            <saml/>
        </logins>
    </security>

    <abacSecurity serviceUserResourceAlias="srvveilarbsituasjon"/>

    <logging serviceCalls="true"/>

    <resources>
        <applicationProperties alias="veilarbsituasjon.properties"/>
        <webservice alias="virksomhet:DigitalKontakinformasjon_v1" mapToProperty="dkif.endpoint"/>
        <webservice alias="virksomhet:Ytelseskontrakt_v3" mapToProperty="ytelseskontrakt.endpoint"/>
        <webservice alias="virksomhet:Oppfolging_v1" mapToProperty="oppfoelging.endpoint"/>
        <webservice alias="virksomhet:OrganisasjonEnhet_v1" mapToProperty="organisasjonenhet.endpoint" />
        <webservice alias="Aktoer_v2" mapToProperty="aktoer.endpoint"/>
        <applicationCertificate alias="srvveilarbsituasjon"/>
        <rest alias="abac.pdp.endpoint" mapToProperty="abac.endpoint" />
        <baseUrl alias="isso-host"/>
        <baseUrl alias="isso-jwks"/>
        <baseUrl alias="isso-issuer"/>
        <credential alias="isso-rp-user"/>

        <fileLibrary mapToProperty="vilkar" alias="veilarbsituasjon.vilkar.v1"/>

        <datasource alias="veilarbsituasjonDB" xaEnabled="true" jndi="java:jboss/jdbc/veilarbsituasjonDS">
            <pool maxPoolSize="300" minPoolSize="0"/>
        </datasource>

        <ldap alias="ldap" mapToProperty="ldap"/>
    </resources>

    <exposed-services>
        <exposedRest path="/veilarbsituasjon/api" name="veilArbSituasjonAPI"/>
        <exposedSoap name="BehandleSituasjonV1"
                     path="/veilarbsituasjon-ws/ws/Situasjon"
                     securityToken="SAML"
                     wsdlGroupId="no.nav.tjenester"
                     wsdlArtifactId="brukerdialog-behandleSituasjon-v1-tjenestespesifikasjon"
                     wsdlVersion="${brukerdialog-behandleSituasjon-v1-tjenestespesifikasjon.version}">
            <exportToZone>SBS</exportToZone>
        </exposedSoap>
    </exposed-services>

</application>